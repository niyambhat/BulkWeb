@model Category

<p></p>

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group pb-3">
                <label asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label  asp-for="DisplayOrder">Display Order</label>
                <input  asp-for="DisplayOrder" class="form-control">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row pt-4">
                <div class="col-6"><button type="submit" class="btn btn-primary form-control">Update</button></div>
                <div class="col-6"><a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Go back to categories</a></div>
            </div>
        </div>
    </form>
</div>

