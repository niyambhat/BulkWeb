@model Category

    <div class="container">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row">
                    <h2 class="text-primary">Create a category</h2>
                    <hr />
                </div>
                <div class="form-group pb-3">
                    <label for="name">Category Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="displayOrder">Display Order</label>
                    <input type="number" class="form-control" id="displayOrder" name="displayOrder">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="row pt-4">
                    <div class="col-6"><button type="submit" class="btn btn-primary form-control">Create</button></div>
                    <div class="col-6"><a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Go back to categories</a></div>
                </div>
            </div>    
        </form>
    </div>

